<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/find_listview_head"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/find_listview_nickname"
        android:text=""
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:textColor="#666872"
        android:layout_toRightOf="@id/find_listview_head"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:textSize="22sp"
        android:singleLine="true"/>

    <TextView
        android:id="@+id/find_listview_title"
        android:text=""
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_toRightOf="@id/find_listview_head"
        android:layout_below="@id/find_listview_nickname"
        android:textSize="12sp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:textColor="#666872" />

    <TextView
        android:id="@+id/find_listview_text"
        android:text=""
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_toRightOf="@id/find_listview_head"
        android:layout_below="@id/find_listview_title"
        android:textSize="12sp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:textColor="#666872" />

    <TextView
        android:id="@+id/find_listview_date"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:gravity="right"
        android:singleLine="true"
        android:text="date"
        android:textSize="12sp" />
</RelativeLayout>